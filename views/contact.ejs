<div class="contact-page-section">
    <div class="container">
        
        <div class="row contact-address-section">
            <div class="col-md-4 pl-0">
                <div class="contact-info contact-address">
                    <i class="fa fa-map-marker"></i>
                    <h4><%= translate('contact').addresse %></h4>
                    <p>B.P: 1026 Bafoussam</p>
                    <p><%= translate('contact').camer %></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-info contact-phone">
                    <i class="fa fa-phone"></i>
                    <h4><%= translate('contact').phone %></h4>
                    
                    <a href="tel:+237 674 784 870">+237 674 784 870</a>
                    <a href="tel:+237 695 998 714">+237 695 998 714</a>
                </div>
            </div>
            <div class="col-md-4 pr-0">
                <div class="contact-info contact-email">
                    <i class="fa fa-envelope"></i>
                    <h4><%= translate('contact').mail %> </h4> 
                    
                    <a href="mailto:ubiast@yahoo.com"><p>ubiast@yahoo.com</p></a>
                    <a href="#"><p>www.biast.com</p></a>
                </div>
            </div>
        </div>

        <div class="contact-comment-section">
            <h3><%= translate('contact').comment %></h3>
            <div id="form-messages"></div>
            <form id="contact-form" method="post" action="https://keenitsolutions.com/products/html/edulearn/edulearn-demo/mailer.php">
                <fieldset>
                    <div class="row">                                      
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <label><%= translate('contact').nom %>*</label>
                                <input name="fname" id="fname" class="form-control" required require type="text">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <label><%= translate('contact').prenom %>*</label>
                                <input name="lname" id="lname" class="form-control" required require type="text">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <label><%= translate('contact').email %></label>
                                <input name="email" id="email" class="form-control"  type="email">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <label><%= translate('contact').sujet %> *</label>
                                <input name="subject" id="subject" class="form-control" required require type="text">
                            </div>
                        </div>
                    </div>
                    <div class="row"> 
                        <div class="col-md-12 col-sm-12">    
                            <div class="form-group">
                                <label><%= translate('contact').message %> *</label>
                                <textarea cols="40" rows="10" id="message" name="message" class="textarea form-control"></textarea>
                            </div>
                        </div>
                    </div>							        
                    <div class="form-group mb-0">
                        <input class="btn-send" type="submit" value="<%= translate('contact').valider %>">
                    </div>
                    
                       
                </fieldset>
            </form>						
        </div>
    </div>
</div>

